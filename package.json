{
  "name": "@devamiza/thunder-cli",
  "author": {
    "name": "Devamiza",
    "email": "admin@devamiza.com",
    "url": "https://github.com/devamiza"
  },
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint:fix"
    ]
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsx watch src/index.ts",
    "debug": "node --inspect --loader tsx ./src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint --fix .",
    "clean": "rm -rf dist",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devamiza/thunder-cli.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devamiza/thunder-cli/issues"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "thunder": "dist/index.js"
  },
  "homepage": "https://github.com/devamiza/thunder-cli#readme",
  "devDependencies": {
    "@types/figlet": "^1.5.4",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.3",
    "ts-jest": "^28.0.5",
    "tsx": "^3.7.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "figlet": "^1.5.2",
    "inquirer": "8.2.3",
    "nanospinner": "^1.1.0",
    "prettier": "^2.7.1"
  }
}
